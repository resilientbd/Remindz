            android:id="@+id/textView" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:max="48"
            android:progress="1"
            android:progressDrawable="@drawable/circular"

            android:id="@+id/progressBar" />
    </LinearLayout>


</RelativeLayout>
